            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/ivAvatar2"
            app:layout_constraintTop_toTopOf="@+id/ivAvatar2"
            app:layout_constraintVertical_bias="0.384"
            app:strokeWidth="2dp"
