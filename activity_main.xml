<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background = "@android:color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40sp"
        android:singleLine="true"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/AC_btn"
                style="@style/NumberButton"
                android:text="AC"
            />
            <TextView
                android:id="@+id/open_br"
                style="@style/NumberButton"
                android:text="("
                />
            <TextView
                android:id="@+id/close_br"
                style="@style/NumberButton"
                android:text=")"
                />
            <TextView
                android:id="@+id/slsh_btn"
                style="@style/NumberButton"
                android:text="/"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_7"
                style="@style/ActionButton"
                android:text="7"
                />
            <TextView
                android:id="@+id/btn_8"
                style="@style/ActionButton"
                android:text="8"
                />
            <TextView
                android:id="@+id/btn_9"
                style="@style/ActionButton"
                android:text="9"
                />

            <TextView
                android:id="@+id/mlt_btn"
                style="@style/NumberButton"
                android:text="*" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_4"
                style="@style/ActionButton"
                android:text="4"
                />

            <TextView
                android:id="@+id/btn_5"
                style="@style/ActionButton"
                android:text="5" />

            <TextView
                android:id="@+id/btn_6"
                style="@style/ActionButton"
                android:text="6"
                />
            <TextView
                android:id="@+id/plus_btn"
                style="@style/NumberButton"
                android:text="+"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_1"
                style="@style/ActionButton"
                android:text="1"
                />
            <TextView
                android:id="@+id/btn_2"
                style="@style/ActionButton"
                android:text="2"
                />
            <TextView
                android:id="@+id/btn_3"
                style="@style/ActionButton"
                android:text="3"
                />
            <TextView
                android:id="@+id/minus_btn"
                style="@style/NumberButton"
                android:text="-"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_dot"
                style="@style/ActionButton"
                android:text="."
                />
            <TextView
                android:id="@+id/btn_0"
                style="@style/ActionButton"
                android:text="0"
                />
            <TextView
                android:id="@+id/btn_back"
                style="@style/ActionButton"
                android:text="BACK"
                />
            <TextView
                android:id="@+id/equal_btn"
                style="@style/NumberButton"
                android:text="="
                />

        </LinearLayout>



    </LinearLayout>
    

</LinearLayout>
